<UserControl x:Class="GraphicalGraph.gEdge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicalGraph"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="gridEdge">
        <Line x:Name="_line" X1="{Binding Path=X1, RelativeSource={RelativeSource AncestorType=local:gEdge}, Mode=TwoWay}" Y1="{Binding Path=Y1, RelativeSource={RelativeSource AncestorType=local:gEdge}, Mode=TwoWay}" 
              X2="{Binding Path=X2, RelativeSource={RelativeSource AncestorType=local:gEdge}, Mode=TwoWay}" Y2="{Binding Path=Y2, RelativeSource={RelativeSource AncestorType=local:gEdge}, Mode=TwoWay}" 
              Stroke = "{Binding Path=Stroke, RelativeSource={RelativeSource AncestorType=local:gEdge}, Mode=TwoWay}"
              StrokeThickness="{Binding Path=StrokeThickness, RelativeSource={RelativeSource AncestorType=local:gEdge}, Mode=TwoWay}">
            
        </Line>
    </Grid>
</UserControl>
