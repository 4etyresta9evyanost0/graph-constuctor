<UserControl x:Class="GraphicalGraph.gVertex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicalGraph"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="35">
    <Grid>
        <Ellipse x:FieldModifier="private" x:Name="_ellipse" Fill="Black"></Ellipse>
        <Label x:FieldModifier="private" x:Name="_label" Foreground="White" Content="Vertex" FontSize="8" VerticalAlignment="Center" Background="Transparent" HorizontalAlignment="Center"/>
        <TextBox x:FieldModifier="private" x:Name="_textBox" Foreground="White" Text="Vertex" FontSize="8" VerticalAlignment="Center" Background="Transparent" HorizontalAlignment="Center" Visibility="Hidden"/>
    </Grid>
</UserControl>
